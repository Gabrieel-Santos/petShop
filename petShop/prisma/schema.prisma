generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Funcionario {
  id         Int    @id @default(autoincrement())
  nome       String
  email      String @unique
  senha      String
  autoridade Int
}

model Tutor {
  id       Int    @id @default(autoincrement())
  nome     String
  endereco String
  telefone String
  cpf      String @unique
  pets     Pet[]
}

model Pet {
  id      Int    @id @default(autoincrement())
  nome    String
  idade   Int
  porte   String
  tutorId Int
  tutor   Tutor  @relation(fields: [tutorId], references: [id])
}
